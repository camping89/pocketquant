# PocketQuant Environment Configuration
# Copy this file to .env and update values as needed

# Application 
APP_NAME=PocketQuant
APP_VERSION=0.1.0
# development, staging, production
ENVIRONMENT=development  
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8765
API_PREFIX=/api/v1

# MongoDB
MONGODB_URL=mongodb://pocketquant:pocketquant_dev@localhost:27018/pocketquant?authSource=admin
MONGODB_DATABASE=pocketquant
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# TradingView (optional - for authenticated access)
# TRADINGVIEW_USERNAME=your_username
# TRADINGVIEW_PASSWORD=your_password

# Logging
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# json (production) or console (development)
LOG_FORMAT=console

# Background Jobs
JOB_WORKER_COUNT=4
