# PocketQuant Configuration
# Copy to .env: cp .env.example .env

# Application
APP_NAME=PocketQuant
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=false

# API Server
API_HOST=0.0.0.0
API_PORT=8765
API_PREFIX=/api/v1

# MongoDB
MONGODB_URL=mongodb://pocketquant:pocketquant_dev@localhost:27018/pocketquant?authSource=admin
MONGODB_DATABASE=pocketquant
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# TradingView (optional)
# TRADINGVIEW_USERNAME=
# TRADINGVIEW_PASSWORD=

# Logging: DEBUG|INFO|WARNING|ERROR|CRITICAL
LOG_LEVEL=INFO
# Logging format: json (production) | console (development)
LOG_FORMAT=console

# Background Jobs
JOB_WORKER_COUNT=4
